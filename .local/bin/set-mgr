#!/bin/sh

# Settings manager

# Defaults
lines=10
border=3
height=35
prompt="󰢻 Settings:"

# Command
choice=$(printf "󰸌 Appearance\n󰿻 Account\n󰍁 Lock screen\n󰍂 Login screen\n󰍹 Display\n󰲝 Network\n󰧺 Input devices\n󰐦 Power\n󰕾 Audio\n󰏗 Package manager\n󰜇 Printer\n󰌧 Autostart\n󰌧 WM autostart\n󰧺 Keybindings\n󰧺 WM keybindings\n" | dmenu -l $lines -bw $border -h $height -p "$prompt" -c )

case "$choice" in
  "󰸌 Appearance") $STYLE ;;
  "󰿻 Account") $USER_INFO ;;
  "󰍁 Lock screen") $TERMINAL -e $EDITOR $(which $LOCK) ;;
  "󰍂 Login screen") pkexec $LOGIN ;;
  "󰍹 Display") $RANDR ;;
  "󰲝 Network") $NM_EDITOR ;;
  "󰧺 Input devices") $INPUT ;;
  "󰐦 Power") $POWER ;;
  "󰕾 Audio") $AUDIO ;;
  "󰏗 Package manager") $GUI_PACK ;;
  "󰜇 Printer") $PRINT ;;
  "󰌧 Autostart") $TERMINAL -e $EDITOR $AUTOSTART ;;
  "󰌧 WM autostart") $TERMINAL -e $EDITOR $WM_AUTOSTART ;;
  "󰧺 Keybindings") $TERMINAL -e $EDITOR $KEYBIND ;;
  "󰧺 WM keybindings") $WM_KEYBIND ;;
esac
