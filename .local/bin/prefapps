#!/bin/sh

# Defaults
lines=8
border=3
height=35
prompt="󰩴 Preferred applications:"

# Command
choice=$(echo "󰆍 Terminal\n󰪶 File manager\n󱇨 Editor\n󰆌 Web browser\n󰴃 Email\n󱔘 Office suite\n󰐋 Media\n󰫔 Music" | dmenu -l $lines -bw $border -h $height -p "$prompt" -c )

case "$choice" in
  "󰆍 Terminal") $TERMINAL ;;
  "󰪶 File manager") $GUI_FILE_MANAGER ;;
  "󱇨 Editor") $GUI_EDITOR ;;
  "󰆌 Web browser") $BROWSER ;;
  "󰴃 Email") $EMAIL_CLIENT ;;
  "󱔘 Office suite") $OFFICE_SUITE ;;
  "󰐋 Media") $MEDIA_PLAYER --player-operation-mode=pseudo-gui -- %U ;;
  "󰫔 Music") $MUSIC_PLAYER ;;
esac
