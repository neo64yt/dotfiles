#!/bin/sh

# Defaults
lines=10
border=3
height=35
prompt="󱍕 Select a prompt to run:"

# Scripts
appmenu="apps"
run="runner"
session="power"
settings="set-mgr"
emoji="dmenuemoji"
password="passprompt"
apps="prefapps"

choice=$(echo "󰀻 Applications\n󰩴 Preferred applications\n󰆍 Run\n󰐦 Session manager\n󰱨 Emojis\n󰢻 Settings\n󰷖 Passwords" | dmenu -l $lines -bw $border -h $height -p "$prompt" -c )

case "$choice" in
  "󰀻 Applications") $appmenu ;;
  "󰩴 Preferred applications") $apps ;;
  "󰆍 Run") $run ;;
  "󰐦 Session manager") $session ;;
  "󰱨 Emojis") $emoji ;;
  "󰢻 Settings") $settings ;;
  "󰷖 Passwords") $password ;;
esac
